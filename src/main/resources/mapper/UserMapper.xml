<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vex.muzhi.community.mapper.UserMapper">

    <!--实体表和数据库表的映射-->
    <resultMap id="userMap" type="User">
        <id column="id" property="id" javaType="Integer"/>
        <result column="account_id" property="accountId" javaType="String"/>
        <result column="name" property="name" javaType="String"/>
        <result column="token" property="token" javaType="String"/>
        <result column="gmt_create" property="gmtCreate" javaType="Long"/>
        <result column="gmt_modified" property="gmtModified" javaType="Long"/>
    </resultMap>

    <!--插入用户信息-->
    <insert id="insert" parameterType="User">
        insert into
        user(name,account_id,token,gmt_create,gmt_modified)
        values(#{name},#{accountId},#{token},#{gmtCreate},#{gmtModified})
    </insert>

    <!--检索用户信息-->
    <select id="findByToken" parameterType="String" resultMap="userMap">
        select * from user where token = #{token}
    </select>
</mapper>